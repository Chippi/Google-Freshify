{
  "manifest_version": 2,
  "name": "Google Freshify",
  "version": "0.0.4",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "matches": [
        "https://*.google.com/search*",
        "https://*.google.se/search*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "https://*.google.com/search*",
    "https://*.google.se/search*",
    "webRequest",
    "webRequestBlocking"
  ]
}
